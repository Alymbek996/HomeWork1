<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/car"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/text_trivia"
        app:layout_constraintStart_toStartOf="@id/text_trivia"
        app:layout_constraintEnd_toEndOf="@id/text_trivia"
android:src="@drawable/iclaptop"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
<Button
    android:textColor="@color/black"
    android:backgroundTint="@color/broun"
    android:layout_marginTop="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/text_trivia"
    android:text="log in with facebook"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
/>
<Button
    android:backgroundTint="@color/blue"
    android:layout_marginBottom="-10dp"
    app:layout_constraintTop_toBottomOf="@id/text_trivia"
    app:layout_constraintEnd_toEndOf="@id/game"
    app:layout_constraintStart_toStartOf="@id/game"
    app:layout_constraintBottom_toTopOf="@id/game"
    android:text="up with email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <Button
        android:backgroundTint="@color/blue"
android:id="@+id/game"
        android:layout_marginTop="290dp"
        app:layout_constraintStart_toStartOf="@id/text_trivia"
        app:layout_constraintEnd_toEndOf="@id/text_trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="game over"
        app:layout_constraintTop_toBottomOf="@id/text_trivia"
       />
<TextView
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:textSize="50sp"
    android:text="login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
         android:id="@+id/text_trivia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textSize="39sp"
        android:text="Trivia"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
          />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="389dp" />

</androidx.constraintlayout.widget.ConstraintLayout>